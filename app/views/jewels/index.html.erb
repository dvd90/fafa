<div class="container">
  <div class="row">
<% @jewels.each do |jewel| %>
<%= link_to jewel_path(jewel) do %>
<% if jewel[:photo] %>
    <div class="col-xs-12 col-sm-4">
  <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path jewel.photo, height: 300, width: 400, crop: :fill %>')">
  <div class="card-category"><%= jewel.name %></div>
  <div class="card-description">
    <h2><%= jewel.description %></h2>
    <p><%= jewel.price %>ILS</p>
  </div>
</div>
    </div>
<% else %>
    <div class="col-xs-12 col-sm-4">
  <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
  <div class="card-category"><%= jewel.name %></div>
  <div class="card-description">
    <h2><%= jewel.description %></h2>
    <p><%= jewel.price %>ILS</p>
  </div>
</div>
    </div>
<% end %>
<% end %>
<% end %>
  </div>
</div>
